<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_container"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:paddingStart="0dp"
        android:paddingEnd="1dp"
        android:paddingBottom="1dp"
        android:scaleType="centerCrop"
        android:transitionName="@string/tap_transition_view_image"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/colorAccent" />

    <FrameLayout
        android:id="@+id/fl_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tap_bg_circle_66000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/pb_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="false"
            android:max="100"
            android:padding="4dp"
            android:progressDrawable="@drawable/tap_circular_progress_white_3dp"
            tools:progress="65" />

        <ImageView
            android:id="@+id/iv_button_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/tap_ic_cancel_white" />

    </FrameLayout>

</android.support.constraint.ConstraintLayout>