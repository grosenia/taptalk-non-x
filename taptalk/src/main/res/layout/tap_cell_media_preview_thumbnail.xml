<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_image_preview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_image_preview"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_margin="2dp"
        tools:background="@color/tap_brightBlue" />

    <FrameLayout
        android:id="@+id/fl_delete"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_margin="2dp"
        android:background="@color/tap_transparent_charcoal_40">

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@drawable/tap_bg_circle_charcoal_50"
            android:padding="8dp"
            android:src="@drawable/tap_ic_remove_white" />

        <ProgressBar
            android:id="@+id/pb_loading"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/tap_white"
            android:visibility="gone" />

    </FrameLayout>

</FrameLayout>
