<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_setup_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tap_transparent_charcoal_40"
    android:elevation="4dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_setup_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/tap_bg_white_rounded_8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_setup_chat"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/tap_img_setup_chat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_setup_chat"
            style="@style/TapToolbarTitle"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:text="@string/tap_setting_up_your_chatroom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_setup_chat" />

        <TextView
            android:id="@+id/tv_setup_chat_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="28dp"
            android:ellipsize="end"
            android:fontFamily="@font/tap_font_neueeinstellungregular"
            android:gravity="center_horizontal"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="6sp"
            android:maxLines="1"
            android:text="@string/tap_make_sure_you_have_a_stable_connection"
            android:textColor="@color/tap_black_44"
            android:textSize="13sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pb_setting_up"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_setup_chat" />

        <ProgressBar
            android:id="@+id/pb_setting_up"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="16dp"
            android:indeterminateTint="@color/tap_amethyst"
            app:layout_constraintBottom_toBottomOf="@id/tv_setup_chat_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_setup_chat_description"
            app:layout_constraintTop_toTopOf="@id/tv_setup_chat_description" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>