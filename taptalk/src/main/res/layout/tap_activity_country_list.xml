<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.taptalk.TapTalk.View.Activity.TAPCountryList">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        tools:background="@color/tap_blue_purple">

        <TextView
            android:id="@+id/tv_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/tap_font_pt_root_regular"
            android:gravity="center_vertical"
            android:letterSpacing="-0.01"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/tap_cfp_action_close"
            android:textColor="@color/tap_pumkin_orange_two"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tap_font_pt_root_bold"
            android:gravity="center_horizontal"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="4sp"
            android:text="@string/select_country"
            android:textColor="@color/tap_black_2c"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/tap_grey_dc">

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15.4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15.4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/tap_bg_rounded_white_8dp_stroke_dcdcdc_1dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_search_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tap_ic_search_grey"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tap_white"
                android:fontFamily="@font/tap_font_pt_root_regular"
                android:hint="@string/search_for_country"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="6sp"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_country_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tap_white_f3"/>

</LinearLayout>
