<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:id="@+id/fl_image_preview"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_image_preview"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_margin="2dp"
        tools:background="@color/tap_amethyst" />

    <FrameLayout
        android:id="@+id/fl_delete"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_margin="2dp"
        android:foreground="@color/tap_transparent_charcoal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/tap_ic_remove_white"
            android:layout_gravity="center"
            android:padding="8dp"
            android:background="@drawable/tap_bg_charcoal_round"/>

    </FrameLayout>

</FrameLayout>
