<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="HomingPigeonToolbarTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/tap_font_neueeinstellungbold</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/tap_black_44</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="HomingPigeonRoomName">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/tap_font_neueeinstellungbold</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/tap_black_44</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="HomingPigeonButton">
        <item name="android:background">@drawable/tap_bg_aquamarine_tealish_stroke_greenblue_1dp_rounded_6dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:fontFamily">@font/tap_font_latobold</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/tap_white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="HomingPigeonButtonText">
        <item name="android:fontFamily">@font/tap_font_latobold</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/tap_white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="HomingPigeonSearchBar">
        <item name="android:background">@color/tap_transparent_white</item>
        <item name="android:fontFamily">@font/tap_font_latoregular</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/tap_black_44</item>
        <item name="android:textColorHint">@color/tap_grey_9b</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HomingPigeonSectionLabel">
        <item name="android:fontFamily">@font/tap_font_latobold</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/tap_mediumPurple</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HomingPigeonContactName">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/tap_font_neueeinstellungbold</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/tap_black_44</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HomingPigeonRoomMessage">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/tap_font_latoregular</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/tap_grey_9b</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="HomingPigeonMessageStatus">
        <item name="android:fontFamily">@font/tap_font_latoregular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/tap_grey_9b</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HomingPigeonMenuLabel">
        <item name="android:fontFamily">@font/tap_font_latoregular</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/tap_black_44</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="HomingPigeonMessageBody">
        <item name="android:fontFamily">@font/tap_font_latoregular</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="HomingPigeonMessageUserName">
        <item name="android:fontFamily">@font/tap_font_latobold</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="HomingPigeonMessageLog">
        <item name="android:fontFamily">@font/tap_font_latobold</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/tap_grey_9b</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HomingPigeonReplySenderName">
        <item name="android:fontFamily">@font/tap_font_latobold</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/tap_black_44</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HomingPigeonReplyBody">
        <item name="android:fontFamily">@font/tap_font_latoregular</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/tap_black_44</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

    <style name="HomingPigeonUnreadBadge">
        <item name="android:background">@drawable/tap_bg_amethyst_mediumpurple_270_rounded_10dp</item>
        <item name="android:fontFamily">@font/tap_font_latobold</item>
        <item name="android:paddingStart">7dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingEnd">7dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/tap_white</item>
        <item name="android:textSize">11dp</item>
    </style>

    <style name="HpProductDetailsLabel">
        <item name="android:fontFamily">@font/tap_font_neueeinstellungbold</item>
        <item name="android:textColor">@color/tap_black_44</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="HpProductDetail">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/tap_font_neueeinstellungsemibold</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/tap_purply</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HpProductDescription">
        <item name="android:fontFamily">@font/tap_font_latoregular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/tap_black_44</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HpOrderStatusGuide">
        <item name="android:fontFamily">@font/tap_font_latoregular</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/tap_black_44</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HpOrderGrandTotal">
        <item name="android:fontFamily">@font/tap_font_latobold</item>
        <item name="android:textColor">@color/tap_black_44</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <!--<item name="tap_shadow_left">@drawable/tap_shadow_left</item>-->
        <!--<item name="tap_shadow_right">@drawable/tap_shadow_right</item>-->
        <!--<item name="tap_shadow_bottom">@drawable/tap_shadow_bottom</item>-->
    </style>

    <style name="EditTextTheme">
        <item name="colorControlActivated">@color/tap_white</item>
    </style>

</resources>
