<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#ffffff"
    tools:context="com.moselo.HomingPigeon.Testing.LibraryActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_chatlist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_chat"/>

    <EditText
        android:id="@+id/et_chat"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:hint="Set Username"
        android:imeActionLabel="send"
        android:imeOptions="actionSend"
        app:layout_constraintTop_toBottomOf="@id/rv_chatlist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_send"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/iv_send"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_sign_in"
        android:padding="12dp"
        android:background="#2eccad"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/et_chat"/>

    <ImageView
        android:id="@+id/iv_to_bottom"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="12dp"
        android:padding="12dp"
        android:src="@drawable/ic_keyboard_arrow_down"
        android:tint="#666666"
        android:background="@drawable/bg_circle_f5f5f5"
        android:elevation="8dp"
        app:layout_constraintBottom_toTopOf="@id/iv_send"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_badge_unread"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="@drawable/bg_circle_primary"
        android:translationX="4dp"
        android:translationY="-4dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="10dp"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="@+id/iv_to_bottom"
        app:layout_constraintRight_toRightOf="@id/iv_to_bottom"
        app:layout_constraintDimensionRatio="1:1"
        tools:text="1"
        android:visibility="gone"
        />

</android.support.constraint.ConstraintLayout>