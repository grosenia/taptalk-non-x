    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_button_search"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iv_search_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_search_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="72dp"
            android:layout_marginStart="72dp"
            android:fontFamily="@font/latoregular"
            android:text="@string/search"
            android:textColor="@color/grey_9b"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/ll_connection_status"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/bg_status_connecting"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_connection_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latobold"
            android:text="@string/connecting"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <ProgressBar
            android:id="@+id/pb_connecting"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginStart="4dp"
            android:progressTint="@color/white" />

        <ImageView
            android:id="@+id/iv_connection_status"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_sign_in"
            android:visibility="gone" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_contact_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:paddingTop="4dp" />

</LinearLayout>