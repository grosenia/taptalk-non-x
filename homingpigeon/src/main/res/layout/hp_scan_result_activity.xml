<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hp_bg_purplish_pink_medium_purple"
    tools:context=".View.Activity.HpScanResultActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_result"
        android:layout_width="291dp"
        android:layout_height="332dp"
        android:alpha="1"
        android:clipToPadding="true"
        app:cardCornerRadius="32dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@color/colorAccent">

                <com.moselo.HomingPigeon.Helper.CircleImageView
                    android:id="@+id/civ_contact_avatar"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:visibility="visible"
                    app:layout_constraintEnd_toStartOf="@id/civ_my_avatar"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:background="@color/brightBlue" />

                <com.moselo.HomingPigeon.Helper.CircleImageView
                    android:id="@+id/civ_my_avatar"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/civ_contact_avatar"
                    tools:background="@color/red" />

            </android.support.constraint.ConstraintLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/ll_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_avatar">

                <LinearLayout
                    android:id="@+id/ll_text_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/user_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="NAMANYABERNAMA"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:fontFamily="@font/hp_font_neueeinstellungbold"
                        android:textColor="@color/mediumPurple"
                        android:textSize="20sp"
                        android:layout_marginTop="13dp"
                        />

                    <TextView
                        android:id="@+id/user_fullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Vivamus adipiscing fermentum quam "
                        android:fontFamily="@font/hp_font_neueeinstellungregular"
                        android:textColor="@color/mediumPurple"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_add_success"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:alpha="0"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/hp_ic_audio_green_blue"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40dp"/>

                    <TextView
                        android:id="@+id/tv_add_success"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text=" You have added Chandravadan to your contacts"
                        android:fontFamily="@font/hp_font_neueeinstellungregular"
                        android:textColor="@color/mediumPurple"
                        android:textSize="13sp"
                        android:layout_marginTop="8dp"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_already_contact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0"
                    android:fontFamily="@font/hp_font_neueeinstellungregular"
                    android:gravity="center"
                    android:text="Chandravadan is already in your contacts"
                    android:textAlignment="center"
                    android:textColor="@color/mediumPurple"
                    android:visibility="gone" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_button"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:alpha="0"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/iv_button_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hp_ic_chat_white" />

                <TextView
                    android:id="@+id/tv_button_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/hp_font_neueeinstellungbold"
                    android:text="Chat Now"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>