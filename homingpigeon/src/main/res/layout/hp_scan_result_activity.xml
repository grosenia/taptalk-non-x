<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hp_bg_purplish_pink_medium_purple"
    tools:context=".View.Activity.HpScanResultActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        android:alpha="1"
        android:animateLayoutChanges="true"
        android:clipToPadding="true"
        app:cardCornerRadius="32dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

            <ImageView
                android:id="@+id/iv_button_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="24dp"
                android:src="@drawable/hp_close_icon_white_black_rounded"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_avatar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="86dp"
                app:layout_constraintBottom_toTopOf="@id/fl_name_card_data"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@color/colorAccent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.moselo.HomingPigeon.Helper.CircleImageView
                    android:id="@+id/civ_my_avatar"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:background="@color/brightBlue" />

                <com.moselo.HomingPigeon.Helper.CircleImageView
                    android:id="@+id/civ_contact_avatar"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:background="@color/red" />

            </android.support.constraint.ConstraintLayout>

            <FrameLayout
                android:id="@+id/fl_name_card_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:animateLayoutChanges="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_avatar">

                <LinearLayout
                    android:id="@+id/ll_text_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="26dp"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_contact_fullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/hp_font_neueeinstellungbold"
                        android:gravity="center_horizontal"
                        android:maxLines="2"
                        android:text="NAMANYABERNAMA"
                        android:textColor="@color/mediumPurple"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_contact_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/hp_font_neueeinstellungregular"
                        android:gravity="center_horizontal"
                        android:text="Vivamus adipiscing fermentum quam "
                        android:textColor="@color/mediumPurple"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_add_success"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_add_success"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/hp_ic_add_contact" />

                    <TextView
                        android:id="@+id/tv_add_success"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="41dp"
                        android:fontFamily="@font/hp_font_neueeinstellungregular"
                        android:gravity="center_horizontal"
                        android:text="@string/you_have_added"
                        android:textColor="@color/mediumPurple"
                        android:textSize="13sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_already_contact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="64dp"
                    android:layout_marginBottom="40dp"
                    android:alpha="0"
                    android:fontFamily="@font/hp_font_neueeinstellungregular"
                    android:gravity="center_horizontal"
                    android:text="Chandravadan is already in your contacts"
                    android:textAlignment="center"
                    android:textColor="@color/mediumPurple"
                    android:visibility="gone" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_button"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:alpha="1"
                android:animateLayoutChanges="true"
                android:background="@color/colorAccent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fl_name_card_data">

                <ImageView
                    android:id="@+id/iv_button_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hp_ic_add_white" />

                <TextView
                    android:id="@+id/tv_button_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/hp_font_neueeinstellungbold"
                    android:text="Add to Contacts"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_this_is_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:letterSpacing="0.01"
                android:text="@string/this_is_you"
                android:textColor="@color/black_44"
                android:textSize="13sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fl_name_card_data" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>