<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#f0f0f0"
    tools:context=".View.Activity.SampleChatActivity">

    <include layout="@layout/cell_user_room"
        android:id="@+id/action_bar"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_chatlist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/action_bar"
        app:layout_constraintBottom_toTopOf="@id/et_chat"/>

    <EditText
        android:id="@+id/et_chat"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:hint="Type your message"
        android:imeActionId="@+id/send"
        android:imeActionLabel="send"
        android:imeOptions="actionSend"
        android:background="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/rv_chatlist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_send"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#cccccc"
        app:layout_constraintTop_toTopOf="@id/et_chat"
        app:layout_constraintBottom_toTopOf="@id/iv_send"
        app:layout_constraintEnd_toStartOf="@id/iv_send"/>

    <ImageView
        android:id="@+id/iv_send"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_send"
        android:padding="12dp"
        android:background="@color/colorPrimary"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/et_chat"/>

    <ImageView
        android:id="@+id/iv_to_bottom"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        android:padding="12dp"
        android:src="@drawable/ic_keyboard_arrow_down"
        android:tint="#666666"
        android:background="@drawable/bg_circle_f5f5f5"
        android:elevation="8dp"
        app:layout_constraintBottom_toTopOf="@id/iv_send"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_badge_unread"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="@drawable/bg_circle_primary"
        android:translationX="4dp"
        android:translationY="-4dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="10dp"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="@+id/iv_to_bottom"
        app:layout_constraintEnd_toEndOf="@id/iv_to_bottom"
        app:layout_constraintDimensionRatio="1:1"
        tools:text="1"
        android:visibility="gone"
        />

</android.support.constraint.ConstraintLayout>