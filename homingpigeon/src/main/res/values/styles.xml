<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HomingPigeonToolbarTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/neueeinstellungbold</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black_44</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="HomingPigeonButton">
        <item name="android:background">@drawable/bg_aquamarine_tealish_stroke_greenblue_1dp_rounded_6dp</item>
        <item name="android:fontFamily">@font/latobold</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="HomingPigeonSearchBar">
        <item name="android:background">@color/transparent</item>
        <item name="android:fontFamily">@font/latoregular</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black_44</item>
        <item name="android:textColorHint">@color/grey_9b</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HomingPigeonSectionLabel">
        <item name="android:fontFamily">@font/latobold</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/mediumPurple</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="HomingPigeonContactName">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/neueeinstellungbold</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black_44</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HomingPigeonRoomMessage">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/latoregular</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/grey_9b</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="HomingPigeonMessageStatus">
        <item name="android:fontFamily">@font/latoregular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/grey_9b</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="HomingPigeonMenuLabel">
        <item name="android:fontFamily">@font/latoregular</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/black_44</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
